<div id="edit_game">
	<%= form_for @game do |f| %>
		
		<%= hidden_field(:game, :user_id, options = {value: "#{current_user.id}"}) %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :theme %>
		<%= f.text_field :theme %>
		<%= f.submit %>
	<% end %>
</div>
<p><%= link_to "Back to #{@game.name}", game_path(@game) %></p>

